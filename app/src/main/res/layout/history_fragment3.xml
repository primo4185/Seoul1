<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/tour_course_1"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/tour_course_1" />

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tour_course_1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/tour_course_1_1" />
            
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_below="@+id/rel1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/tour_course_2"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/tour_course_2" />

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tour_course_2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/tour_course_2_1" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_below="@+id/rel2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/tour_course_3"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/tour_course_3" />

            <ImageView
                android:id="@+id/tour_course_3_1"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tour_course_3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/tour_course_3_1" />

            <ImageView
                android:id="@+id/tour_course_3_2"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tour_course_3_1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/tour_course_3_2" />

            <ImageView
                android:id="@+id/tour_course_3_3"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tour_course_3_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@drawable/tour_course_3_3" />

        </RelativeLayout>
        
        
        
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>